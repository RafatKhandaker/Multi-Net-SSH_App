<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#FFFFFF"
    android:padding="1dp"
    android:paddingBottom="20dp"
    android:id="@+id/add_card_holder">

    <!-- A CardView that contains a TextView -->


    <android.support.v7.widget.CardView
        android:id="@+id/add_card_view"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:backgroundTint="#000000"
        android:background="#000000"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add New Host"
            android:layout_marginLeft="60dp"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF"
            android:id="@+id/add_host_tv"/>

        <ImageButton
            android:layout_height="75dp"
            android:layout_width="75dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/add_hostname_btn"
            android:background="@drawable/add_button"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold|italic"
            android:id="@+id/save_host_text"
            android:gravity="center_horizontal"
            android:layout_marginLeft="160dp"
            android:text="Save Hosts"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:id="@+id/save_host_icon"
            android:layout_marginLeft="80dp"
            android:background="@drawable/icon_save_project"
            android:layout_gravity="center_horizontal" />


    </android.support.v7.widget.CardView>
</LinearLayout>